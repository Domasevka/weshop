          .product-specs
            .product-specs__item
              button.btn
              span 1
              button.btn

            .product-specs__item
              select(name="size")
                option(value="")
                option(value="S") S
                option(value="M") M
                option(value="L") L
                option(value="XL") XL

            .product-specs__item
              select(name="color")
                option(value="")
                  option(value="black") black
                  option(value="white") white
          .product-btn__wrap
            .btn-group.product-btn
              a(href="#").btn.btn_nofill.btn_md Add to cart
            .btn-group
              a(href="#").btn.btn-fully_main.btn_md Add to wishlist
          .social__wrap
            h6.title__line Share
            .social
              each item, i in productSocials
                a(href=item.href, target="_blank", class='social__link' + item.icon)
                  - mod = mod || ''
                  svg(class="icon icon-" + item.icon + " " + mod)
                    use(xlink:href="i/sprite/sprite.svg#" + item.icon)
