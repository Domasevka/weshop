.page-title
  .container
    ul.breadcrumbs
      each val in prodBreadcrumbs
        li.breadcrumbs__list
          a.breadcrumbs__link(href=val.href)=val.name
    h1 Product Details
section
  .product
    .container
      .row
        .product__container
          .product__slider.product__slider-single
            .product__item
              .product__img
                img(src="img/555х600.jpg")
            .product__item
              .product__img
                img(src="img/555х600_1.jpg")
            .product__item
              .product__img
                img(src="img/555х600_2.jpg")

          .product__slider.product__slider-nav
            .product__item
              .product__img
                img(src="img/555х600.jpg")
            .product__item
              .product__img
                img(src="img/555х600_1.jpg")
            .product__item
              .product__img
                img(src="img/555х600_2.jpg")

        .product__aside
          .product__features
            .product-price
              .product-price__text $589
            .product-brand
              h4
                a(href="#").product-brand__title Star Wars Boys' The Force Awakens Character Match Up T-Shirt
            .product-rating
              .product-rating__stars
                - var n = 0
                  i
                    while n < 5
                      - n++
                        +icon('star-half-empty', 'main_mod')
              .product-rating__text |Add review
          .product__info
