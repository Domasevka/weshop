.page-title.page-title_bgr
  .container
    ul.breadcrumbs
      each item in breadcrumbs

        li.breadcrumbs__list
            a.breadcrumbs__link(href=item.href)=item.name
    h1 Product

section
 .catalog
  .container
    .row
      .catalog__toolbar
        .cat-nav
          h6.cat-nav__title Category
          ul.cat-nav__nav
            each catItem in category
              li.cat-nav__item
                a.cat-nav__item-link(href=catItem.href)=catItem.name
                 span.cat-nav__count=catItem.count
        .cat-nav
          h6.cat-nav__title Price By Filter
            //form(method='post')
          div(data-min="15", data-max="300").slider
          //label(for="price") Price:
          //input(type="text", name="price", id="price", maxlength="10")
          //div(id="slider_price")
          p Price:
            span.slider-value
            span.slider-value_second
          input(type="button", value="Filter").send.btn.btn_nofill.btn_sm
        .cat-nav
          h6.cat-nav__title Size
          ul
            each item in checkbox
              li.cat-nav__item
                input(type="checkbox", checked=item.selected).cat-nav__selected
                label.cat-nav__description=item.name
                  span.cat-nav__count=item.count
        .cat-nav
          h6.cat-nav__title Best sale
          .top-brand
            a(href="#").top-brand__image
              img(src="img/70x80.jpg" width="250" height="160" alt="img")
            .top-brand__content
              h5.top-brand__title Denim t-shirt
              .product-rating__stars
                - var n = 0
                i
                  while n < 5
                    - n++
                    +icon('star-half-empty', 'main_mod')
              p.top-brand__price $289 - $250

          .top-brand
            a(href="#").top-brand__image
              img(src="img/70x80.jpg" width="250" height="160" alt="img")
            .top-brand__content
              h5.top-brand__title Denim t-shirt
              .product-rating__stars
                - var n = 0
                i
                  while n < 5
                    - n++
                    +icon('star-half-empty', 'main_mod')
              p.top-brand__price $289 - $250
        .cat-nav
          h6.cat-nav__title Keyword
          ul.tag
            each item in tagList
              li.tag__item
                a.tag__link(href=item.href)=item.name


      .catalog__container
        .filter-block
          .filter-block__view
            a(href="#").filter-block__view-el
              +icon('list', 'main_mod')
            a(href="#").filter-block__view-el
              +icon('columns', 'main_mod')

          ul.filter-block__color
            each item in colorList
              li.filter-block__item(class="filter-block__item_" + item.color)
                a.filter-block__link(href=item.href)

          .filter-block__el
            span.filter-block__title Sort by:
            select(data-placeholder="Date" class="chosen-select" tabindex="2").filter__contant
              option(value="") Date
              option(value="Relevance") Relevance
              option(value="New Arrivals") New Arrivals

          .filter-block__el
            span.filter-block__title Shows
            select(data-placeholder="Date" class="chosen-select" tabindex="2").filter__contant
              option(value="") 12
              option(value="Relevance") 24
              option(value="New Arrivals") 36


        .product-card__container
          - for (var a = 0; a < 4; a++)
             include components/_product-card

        nav.pagination-block
          ul.pagination.js-pagination

