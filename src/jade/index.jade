doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    title home
    meta(name='viewport', content='width=device-width,initial-scale=1')
    link(rel='stylesheet', href='styles/style.css')

  body
    include blocks/mixins
    header
      .header
        .container
          .header__topline
            ul.contacts-nav__items
              li.contacts-nav__item
                a(href="#") (00)-123-456-789
              li.contacts-nav__item
                a(href="#") weshop@gmail.com
            .header__search
              form
                input
            ul.user-nav__items
              each val in ['English', 'USD', 'Login']
                li.user-nav__item
                  a(href="#")= val

          .header__botline
            a(href="#").header__logo
              img(src="img/logo.jpg" width="161" height="52" alt="LoGo")
            nav.main-menu
              //.main-menu__mobile
                +icon('bar-menu','success_mod')
              ul.main-menu__list
                each val in ['Home', 'Shop', 'Men', 'Women', 'Page', 'Blog', 'Contact us']
                  li.main-menu__item
                    a(href="#").main-menu__item-link= val
            ul.nav-cart__items
              li.nav-cart__item
                a(href="#") cart
              li.nav-cart__item
                span $25

      .header__banner
        .container
          .header__title
            h1 fashion is nothing
            h3 but mischief
          .btn-group
            a(href="#").btn.btn__main-back-fill.btn__md Shop Now

    section
      .widgets
        .container
          .row
            .widget__column
              a(href="#").widget__link.widget__link-bord
                span.widget__image
                  img(src="img/555x250.jpg" width="555" height="250" alt="")
                span.widget__title.widget__title-bord
                  span.widget__title-name Men’s t-shirt<br><strong>collection</strong>
                  span 2016

            .widget__column
              a(href="#").widget__link.widget__link-bord
                span.widget__image
                  img(src="img/555x250.jpg" width="555" height="250" alt="")
